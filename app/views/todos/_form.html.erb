<% if @todo.errors.any? %>
 <h2> The following errors prevented the task from being saved.</h2>
 <ul>
 <% @todo.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  </ul>
  <% end %>
<% end %>

<%= form_for @todo do |f| %>
  <p>
    <div class="field form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </p>
  <p>  
    <div class="field form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class:"form-control" %>
    </div>
  </p>

  <p>
    <%= f.submit class: 'btn btn-secondary'%>
  </p>

<% end %>

<%= link_to "Back to todos listings", todos_path, class: "btn btn-secondary" %>
